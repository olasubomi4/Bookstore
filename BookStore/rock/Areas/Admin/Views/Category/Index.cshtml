@model IEnumerable<rock.Models.Category>

@{
    ViewData["Title"] = "Index";
}
@{await Html.RenderPartialAsync("_Notification");}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
	    </div>
        <div class="col-6 text-end">
	        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
	       <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
	        </a>
	    </div>
    </div>
    <br />


</div>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDateTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mx-2"> <i class="bi bi-bi bi-info-circle"></i>Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
